// ESLint 检查 .vue 文件需要单独配置编辑器：
// https://eslint.vuejs.org/user-guide/#editor-integrations
{
  "extends": ["taro/vue"],
  "rules": {
    "indent": ["off", "tab"],
    "vue/html-indent": [
        "error",
        4,
        {
            "attribute": 1,
            "baseIndent": 1,
            "closeBracket": 0,
            "alignAttributesVertically": true,
            "ignores": []
        }
    ]
}
}
